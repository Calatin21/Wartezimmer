@model string
@{
    Layout = null;
    string next = "keine Patienten im Warteraum";
    if (Patienten.Schlange.Count() != 0) {
        next = "leer";
    }
    if (Model != null) {
        next = Model;
    }    
    int anzahl = Patienten.Schlange.Count();
}
<!DOCTYPE html>
<html>
<head>
    <title>Arztsicht</title>
    <link rel="stylesheet" href="~/css/StyleSheet.css" />
    <table>
        <tr>
            <td><a asp-action="Index"><button type="button">Home</button></a></td>
            <td><a asp-action="PatientenListe"><button type="button">Warteraum</button></a></td>
            <td><a asp-action="Arztsicht"><button type="button">Arzt</button></a></td>
            <td><a asp-action="Eingabe"><button type="button">Arzthelfer</button></a></td>
        </tr>
    </table>
</head>
<body>
    <label asp-for="@anzahl">Patienten-Anzahl: </label>
    <input asp-for="@anzahl" />
    <h1>Patient</h1>
    <div class="center">
        <label asp-for="@next">Patienten-Daten: </label>
        <label asp-for="@next">@next</label>
        <div class="button">
        <a asp-action="NextArztsicht"><button type="button">Nächster</button></a>
		</div>
	</div>

</body>
</html>
